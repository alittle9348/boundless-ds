{
  "lerna": "2.9.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "init": {
      "exact": true
    }
  },
  "npmClientArgs": [
    "--registry=https://registry.npmjs.org/"
  ],
  "changelog": {
      "labels": {
        "bug": "bug :bug:",
        "documentation": "documentation :book:",
        "enhancement": "enhancement :sparkles:",
        "epic": "EPIC! :crossed_swords:",
        "fix / refactor": "fix / refactor :construction:"
      },
      "cacheDir": ".changelog"
    }
}
